@model IEnumerable<ProjetoContabilidade.Models.Contador>
@{
    ViewData["Title"] = "Contadores";
}

<h2>Contadores</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Novo Contador</a>

<div class="row">
    @foreach (var contador in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@contador.Nome</h5>
                    <p class="card-text">
                        <small class="text-muted">CPF: @contador.CPF</small>
                    </p>
                    <a asp-action="Details" asp-route-id="@contador.Id" class="btn btn-sm btn-outline-primary">Ver Empresas</a>
                </div>
            </div>
        </div>
    }
</div>
