@model ProjetoContabilidade.Models.Contador
@{
    ViewData["Title"] = "Cadastrar Contador";
}

<h2>Cadastrar Contador</h2>

<form asp-action="Create" method="post" class="w-50">
    <div class="form-group mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CPF" class="form-label">CPF</label>
        <input asp-for="CPF" class="form-control" />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
</form>
