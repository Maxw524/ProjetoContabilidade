<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/mudblazor-style.css" />
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Sistema de Contabilidade</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Usando Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f2f4f8;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            background-color: #ffffff;
            border-right: 1px solid #dee2e6;
            min-height: 100vh;
            padding: 20px 10px;
        }

            .sidebar a {
                display: block;
                font-weight: 500;
                color: #333;
                margin: 10px 0;
                text-decoration: none;
                padding: 5px 10px;
                border-radius: 4px;
            }

                .sidebar a:hover, .sidebar a.active {
                    background-color: #e2e6ea;
                    color: #0056b3;
                }

        .card {
            border: none;
            border-radius: .5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: .75rem;
        }

        .btn {
            border-radius: .25rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <h4 class="text-center">Menu</h4>
                <a asp-controller="Contadores" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Contadores" ? "active" : "")">Contadores</a>
                <a asp-controller="Empresas" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Empresas" ? "active" : "")">Empresas</a>
            </nav>

            <!-- Conteúdo Principal -->
            <main class="col-md-10 p-4">
                <!-- LoginPartial aqui -->
                @await Html.PartialAsync("_LoginPartial")
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
