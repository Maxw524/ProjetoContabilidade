@model IEnumerable<ProjetoContabilidade.Models.Empresa>

<h2>Empresas</h2>

<a asp-action="Create" class="btn btn-primary">Nova Empresa</a>

<form method="get">
    <input type="text" name="pesquisa" placeholder="Pesquisar por nome ou CNPJ..." />
    <button type="submit">Pesquisar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Razão Social</th>
            <th>CNPJ</th>
            <th>Contador</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empresa in Model)
        {
            <tr>
                <td>@empresa.RazaoSocial</td>
                <td>@empresa.CNPJ</td>
                <td>@empresa.Contador?.Nome</td>
                <td>
                    <a asp-action="Details" asp-route-id="@empresa.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
